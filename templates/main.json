{
  "min_packer_version": "0.12.1",
  "description": "",

  "variables": {
    "__comment": "Set these variables in site.json template or command line",
    "namespace": null,
    "version": null,
    "headless": null,
    "iso_server": null,
    "ks_server": null,
    "disk_size": "5120",
    "root_pass": null,
    "ssh_timeout": null,
    "vmware_sha": null,

    "__comment": "Set these variables in OS specific templates or command line",
    "vm_name": null,
    "os_name": null,
    "os_version": null,
    "iso": null,
    "iso_checksum": null
  },

  "builders": [
    {
      "name": "aws",
      "type": "virtualbox-iso",
      "headless": "{{user `headless`}}",
      "output_directory": "artifacts/{{user `version`}}/{{user `vm_name`}}/{{build_name}}",
      "vm_name": "{{user `vm_name`}}-{{user `version`}}_{{build_name}}",
      "format": "ova",

      "disk_size": "{{user `disk_size`}}",

      "iso_url": "{{user `iso_server`}}/{{user `os_version`}}/isos/x86_64/{{user `iso`}}.iso",
      "iso_checksum_type": "sha256",
      "iso_checksum": "{{user `iso_checksum`}}",

      "guest_os_type": "RedHat_64",
      "guest_additions_mode": "disable",

      "ssh_username": "root",
      "ssh_password": "{{user `root_pass`}}",
      "ssh_timeout": "{{user `ssh_timeout`}}",

      "shutdown_command": "shutdown -P now",

      "http_directory": "",
      "boot_command": [
        "<tab> ks={{user `ks_server`}}/ks.php?build=virtual/{{build_name}}&os={{user `os_name`}}-{{user `os_version`}} selinux=0<enter><wait>"
      ],

      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "512" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ],
        [ "modifyvm", "{{.Name}}", "--usb", "off" ],
        [ "modifyvm", "{{.Name}}", "--usbehci", "off" ],
        [ "modifyvm", "{{.Name}}", "--audio", "none" ]
      ]
    },

    {
      "name": "azure",
      "type": "qemu",
      "headless": "{{user `headless`}}",
      "output_directory": "artifacts/{{user `version`}}/{{user `vm_name`}}/{{build_name}}",
      "vm_name": "{{user `vm_name`}}-{{user `version`}}_{{build_name}}.qcow2",
      "format": "qcow2",

      "disk_size": "{{user `disk_size`}}",
      "disk_interface": "ide",
      "disk_compression": true,

      "iso_url": "{{user `iso_server`}}/{{user `os_version`}}/isos/x86_64/{{user `iso`}}.iso",
      "iso_checksum_type": "sha256",
      "iso_checksum": "{{user `iso_checksum`}}",

      "ssh_username": "root",
      "ssh_password": "{{user `root_pass`}}",
      "ssh_timeout": "{{user `ssh_timeout`}}",

      "shutdown_command": "shutdown -P now",

      "http_directory": "",
      "boot_command": [
        "<tab> ks={{user `ks_server`}}/ks.php?build=virtual/{{build_name}}&os={{user `os_name`}}-{{user `os_version`}} selinux=0<enter><wait>"
      ],

      "qemuargs": [
        [ "-m", "1024M" ]
      ]
    },

    {
      "name": "docker",
      "type": "qemu",
      "headless": "{{user `headless`}}",
      "output_directory": "artifacts/{{user `version`}}/{{user `vm_name`}}/{{build_name}}",
      "vm_name": "{{user `vm_name`}}-{{user `version`}}_{{build_name}}.qcow2",
      "format": "qcow2",

      "disk_size": "{{user `disk_size`}}",
      "disk_interface": "ide",
      "disk_compression": true,

      "iso_url": "{{user `iso_server`}}/{{user `os_version`}}/isos/x86_64/{{user `iso`}}.iso",
      "iso_checksum_type": "sha256",
      "iso_checksum": "{{user `iso_checksum`}}",

      "ssh_username": "root",
      "ssh_password": "{{user `root_pass`}}",
      "ssh_timeout": "{{user `ssh_timeout`}}",

      "shutdown_command": "shutdown -P now",

      "http_directory": "",
      "boot_command": [
        "<tab> ks={{user `ks_server`}}/ks.php?build=virtual/{{build_name}}&os={{user `os_name`}}-{{user `os_version`}} selinux=0<enter><wait>"
      ],

      "qemuargs": [
        [ "-m", "1024M" ]
      ]
    },

    {
      "name": "gcp",
      "type": "qemu",
      "headless": "{{user `headless`}}",
      "output_directory": "artifacts/{{user `version`}}/{{user `vm_name`}}/{{build_name}}",
      "vm_name": "{{user `vm_name`}}-{{user `version`}}_{{build_name}}.qcow2",
      "format": "qcow2",

      "disk_size": "{{user `disk_size`}}",
      "disk_interface": "ide",
      "disk_compression": true,

      "iso_url": "{{user `iso_server`}}/{{user `os_version`}}/isos/x86_64/{{user `iso`}}.iso",
      "iso_checksum_type": "sha256",
      "iso_checksum": "{{user `iso_checksum`}}",

      "ssh_username": "root",
      "ssh_password": "{{user `root_pass`}}",
      "ssh_timeout": "{{user `ssh_timeout`}}",

      "shutdown_command": "shutdown -P now",

      "http_directory": "",
      "boot_command": [
        "<tab> ks={{user `ks_server`}}/ks.php?build=virtual/{{build_name}}&os={{user `os_name`}}-{{user `os_version`}} selinux=0<enter><wait>"
      ],

      "qemuargs": [
        [ "-m", "1024M" ]
      ]
    },

    {
      "name": "openstack",
      "type": "qemu",
      "headless": "{{user `headless`}}",
      "output_directory": "artifacts/{{user `version`}}/{{user `vm_name`}}/{{build_name}}",
      "vm_name": "{{user `vm_name`}}-{{user `version`}}_{{build_name}}.qcow2",
      "format": "qcow2",

      "disk_size": "{{user `disk_size`}}",
      "disk_interface": "ide",
      "disk_compression": true,

      "iso_url": "{{user `iso_server`}}/{{user `os_version`}}/isos/x86_64/{{user `iso`}}.iso",
      "iso_checksum_type": "sha256",
      "iso_checksum": "{{user `iso_checksum`}}",

      "ssh_username": "root",
      "ssh_password": "{{user `root_pass`}}",
      "ssh_timeout": "{{user `ssh_timeout`}}",

      "shutdown_command": "shutdown -P now",

      "http_directory": "",
      "boot_command": [
        "<tab> ks={{user `ks_server`}}/ks.php?build=virtual/{{build_name}}&os={{user `os_name`}}-{{user `os_version`}} selinux=0<enter><wait>"
      ],

      "qemuargs": [
        [ "-m", "1024M" ]
      ]
    },

    {
      "name": "virtualbox",
      "type": "virtualbox-iso",
      "headless": "{{user `headless`}}",
      "output_directory": "artifacts/{{user `version`}}/{{user `vm_name`}}/{{build_name}}",
      "vm_name": "{{user `vm_name`}}-{{user `version`}}_{{build_name}}",
      "format": "ova",

      "disk_size": "{{user `disk_size`}}",

      "iso_url": "{{user `iso_server`}}/{{user `os_version`}}/isos/x86_64/{{user `iso`}}.iso",
      "iso_checksum_type": "sha256",
      "iso_checksum": "{{user `iso_checksum`}}",

      "guest_os_type": "RedHat_64",
      "guest_additions_path": "/tmp/VBoxGuestAdditions.iso",

      "ssh_username": "root",
      "ssh_password": "{{user `root_pass`}}",
      "ssh_timeout": "{{user `ssh_timeout`}}",

      "shutdown_command": "shutdown -P now",

      "http_directory": "",
      "boot_command": [
        "<tab> ks={{user `ks_server`}}/ks.php?build=virtual/{{build_name}}&os={{user `os_name`}}-{{user `os_version`}} selinux=0<enter><wait>"
      ],

      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "512" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ],
        [ "modifyvm", "{{.Name}}", "--usb", "off" ],
        [ "modifyvm", "{{.Name}}", "--usbehci", "off" ],
        [ "modifyvm", "{{.Name}}", "--audio", "none" ]
      ]
    },

    {
      "name": "vmware",
      "type": "vmware-iso",
      "headless": "{{user `headless`}}",
      "output_directory": "artifacts/{{user `version`}}/{{user `vm_name`}}/{{build_name}}",
      "vm_name": "{{user `vm_name`}}-{{user `version`}}_{{build_name}}",
      "format": "ova",

      "disk_size": "{{user `disk_size`}}",

      "iso_url": "{{user `iso_server`}}/{{user `os_version`}}/isos/x86_64/{{user `iso`}}.iso",
      "iso_checksum_type": "sha256",
      "iso_checksum": "{{user `iso_checksum`}}",

      "version": "11",
      "guest_os_type": "rhel7-64",
      "tools_upload_flavor": "",

      "ssh_username": "root",
      "ssh_password": "{{user `root_pass`}}",
      "ssh_timeout": "{{user `ssh_timeout`}}",

      "shutdown_command": "shutdown -P now",

      "http_directory": "",
      "boot_command": [
        "<tab> ks={{user `ks_server`}}/ks.php?build=virtual/{{build_name}}&os={{user `os_name`}}-{{user `os_version`}} selinux=0<enter><wait>"
      ],

      "vmx_data": {
        "memsize": "512",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1",
        "ethernet0.pciSlotNumber": "32"
      },

      "vmx_data_post": {
        "vcpu.hotadd": "TRUE",
        "mem.hotadd": "TRUE"
      }
    }
  ],

  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "ansible/site.yml",
      "sftp_command": "/usr/libexec/openssh/sftp-server -e",
      "user": "root",
      "extra_arguments": [
        "-v",
        "-e packer_build_name={{build_name}}",
        "-e packer_namespace={{user `namespace`}}",
        "-e packer_version={{user `version`}}",
        "-e packer_ks_server={{user `ks_server`}}"
      ]
    },
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sh '{{.Path}}'",
      "scripts": [
        "scripts/cleanup.sh",
        "scripts/zero.sh"
      ]
    }
  ],

  "post-processors": [
    {
      "type": "shell-local",
      "only": ["azure"],
      "keep_input_artifact": true,
      "environment_vars": [
        "OUTDIR=artifacts/{{user `version`}}/{{user `vm_name`}}/{{build_name}}",
        "OUTNAME={{user `vm_name`}}-{{user `version`}}_{{build_name}}"
      ],
      "inline": ["qemu-img convert -o subformat=fixed,force_size -O vpc $OUTDIR/$OUTNAME.qcow2 $OUTDIR/$OUTNAME.vhd"]
    },

    {
      "type": "shell-local",
      "only": ["docker"],
      "keep_input_artifact": true,
      "environment_vars": [
        "OUTDIR=artifacts/{{user `version`}}/{{user `vm_name`}}/{{build_name}}",
        "OUTNAME={{user `vm_name`}}-{{user `version`}}_{{build_name}}"
      ],
      "inline": ["virt-tar-out -a $OUTDIR/$OUTNAME.qcow2 / - | gzip > $OUTDIR/$OUTNAME.tar.gz"]
    },

    {
      "type": "shell-local",
      "only": ["gcp"],
      "keep_input_artifact": true,
      "environment_vars": [
        "OUTDIR=artifacts/{{user `version`}}/{{user `vm_name`}}/{{build_name}}",
        "OUTNAME={{user `vm_name`}}-{{user `version`}}_{{build_name}}"
      ],
      "inline": [
        "qemu-img convert -f qcow2 -O raw $OUTDIR/$OUTNAME.qcow2 $OUTDIR/disk.raw",
        "tar -C $OUTDIR -Sczf $OUTDIR/$OUTNAME.tar.gz disk.raw && rm $OUTDIR/disk.raw"
      ]
    },

    {
      "type": "shell-local",
      "only": ["vmware"],
      "keep_input_artifact": true,
      "environment_vars": [
        "VENDOR={{user `site`}}",
        "PRODUCT={{user `vm_name`}}",
        "VERSION={{user `version`}}",
        "OUTDIR=artifacts/{{user `version`}}/{{user `vm_name`}}/{{build_name}}",
        "OUTNAME={{user `vm_name`}}-{{user `version`}}_{{build_name}}"
      ],
      "scripts": [
        "scripts/ovfenv.sh"
      ]
    },

    {
      "type": "vagrant",
      "except": ["vmware"],
      "keep_input_artifact": true,
      "output": "artifacts/{{user `version`}}/{{user `vm_name`}}/{{build_name}}/{{user `vm_name`}}-{{user `version`}}_{{build_name}}.box"
    },

    {
      "type": "shell-local",
      "environment_vars": [
        "OUTDIR=artifacts/{{user `version`}}/{{user `vm_name`}}/{{build_name}}"
      ],
      "inline": [
        "cd $OUTDIR",
        "sha256sum * > SHA256SUM"
      ]
    }
  ]
}
